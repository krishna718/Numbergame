<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="krishnas.numbergame.MainActivity"
    android:visibility="visible">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:id="@+id/layout2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30s"
            android:id="@+id/textView"
            android:textSize="20sp"
            android:background="#f08484"
            android:layout_alignTop="@+id/textView3"
            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/textView3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/0"
            android:id="@+id/textscore"
            android:textSize="30sp"
            android:background="#f16666"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12+21"
            android:id="@+id/textView3"
            android:textSize="30sp"
            android:textColor="#0d0c0c"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:id="@+id/gridLayout"
            android:paddingTop="20dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="33"
                android:id="@+id/button"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:tag="0"
                android:onClick="chooseanswer"
                android:background="#74c6ec"
                android:textSize="80sp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11"
                android:id="@+id/button1"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:tag="1"
                android:onClick="chooseanswer"
                android:background="#22b0f2"
                android:textSize="80sp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:id="@+id/button2"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:tag="2"
                android:onClick="chooseanswer"
                android:background="#2eb0ec"
                android:textSize="80sp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="53"
                android:id="@+id/button3"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:tag="3"
                android:onClick="chooseanswer"
                android:background="#74c6ec"
                android:textSize="80sp" />
        </GridLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correct!"
            android:id="@+id/textresult"
            android:layout_marginTop="27dp"
            android:textSize="50sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/gridLayout" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" PlayAgain!!!"
            android:id="@+id/button4"
            android:onClick="playagain"
            android:visibility="invisible"
            android:background="#84f375"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</RelativeLayout>
